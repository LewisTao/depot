=simple_form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.input :title
  .field
    = f.input :description
  .field
    = f.input :image_url
  .field
    = f.input :price
  .actions
    = f.submit
