= simple_form_for @order do |f|
  - if @order.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
      %ul
        - @order.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.input :name
  .field
    = f.input :address
  .field
    = f.input :email
  .field
    = f.input :pay_type, input_html: { }, collection: ["Check", "Credit card", "Purchase order"], prompt: 'Select a payment method'
  .actions
    = f.submit 'Place Order'
